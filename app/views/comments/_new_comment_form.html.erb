<%= form_for @book.comments.build, html: {multipart: true},
  remote: true do |f| %>
  <div class="field">
    <%= f.text_area :content, placeholder: t("reviews.new_comment"),
      id: "comment_content_field-#{@book.id}" %>
  </div>
  <div><%= f.hidden_field :book_id, value: @book.id %></div>
  <%= f.submit t("review"), class: "btn btn-primary" %>
<% end %>
